<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8fd2ca"
    tools:context="com.example.castriwolf.getup2.Preferencias_Alarma">

    <Button
        android:id="@+id/salir"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="188dp"
        android:text="Borrar" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="218dp"
        android:layout_height="28dp"
        android:layout_alignBottom="@+id/salir"
        android:layout_centerHorizontal="true"
        android:text="Borrar todas las alarmas"
        android:textColor="@android:color/background_dark" />

    <Switch
        android:id="@+id/switch5"
        android:layout_width="364dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="21dp"
        android:paddingLeft="100dp"
        android:paddingTop="100dp"
        android:text="Vibracion de la Alarma"
        android:textColor="@android:color/black" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="347dp"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.984"
        app:srcCompat="@drawable/iconoletras" />

</RelativeLayout>